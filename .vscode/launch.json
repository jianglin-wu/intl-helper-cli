    "version": "0.2.0",
    "configurations": [
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "extract test",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/index.js",
            "args": ["extract", "./test"]
        },
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "inject test",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/index.js",
            "args": ["inject", "./test", "-l", "./locales/zh-CN.js", "-o", "./output"]
        }
    ]
}
